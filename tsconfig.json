{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment Settings
    // See also https://aka.ms/tsconfig/module
    "module": "nodenext",
    "target": "esnext",
    "moduleResolution": "nodenext",

    // Recommended Options
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./node_modules"]
}
